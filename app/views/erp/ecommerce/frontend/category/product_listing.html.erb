<div class="container">
    <header class="page-header">
        <h1 class="page-title">Máy Vi Tính</h1>
        <ol class="breadcrumb page-breadcrumb">
            <li><%= link_to "Trang Chủ", erp_ecommerce.root_path, title: "" %></li>
            <li><%= link_to "Chuyên Mục Sản Phẩm", "", title: "" %></li>
            <li class="active">Máy Vi Tính</li>
        </ol>
        <ul class="category-selections clearfix">
            <li>
                <a class="fa fa-th-large category-selections-icon active" href="#"></a>
            </li>
            <li>
                <a class="fa fa-th-list category-selections-icon" href="#"></a>
            </li>
            <li><span class="category-selections-sign">Sắp xếp:</span>
                <select class="category-selections-select">
                    <option selected>Newest First</option>
                    <option>Best Sellers</option>
                    <option>Trending Now</option>
                    <option>Best Raited</option>
                    <option>Price : Lowest First</option>
                    <option>Price : Highest First</option>
                    <option>Title : A - Z</option>
                    <option>Title : Z - A</option>
                </select>
            </li>
            <li><span class="category-selections-sign">Items :</span>
                <select class="category-selections-select">
                    <option>9 / page</option>
                    <option selected>12 / page</option>
                    <option>18 / page</option>
                    <option>All</option>
                </select>
            </li>
        </ul>
    </header>
    <div class="row">
        <div class="col-md-3">
            <%= render "erp/ecommerce/frontend/modules/category/left_sidebar" %>
        </div>
        <div class="col-md-9">
            <% count = 12 %>
            <div class="row" data-gutter="15">
                <% (0..11).each_with_index do |product, index| %>
                <div class="col-md-4">
                    <div class="product ">
                        <ul class="product-labels"></ul>
                        <div class="product-img-wrap">
                            <img class="product-img-primary" src="/frontend/img/product-01.jpg" alt="Image Alternative text" title="Image Title" />
                            <img class="product-img-alt" src="/frontend/img/product-02.jpg" alt="Image Alternative text" title="Image Title" />
                        </div>
                        <a class="product-link" href="#"></a>
                        <div class="product-caption">
                            <ul class="product-caption-rating">
                                <li class="rated">
                                    <i class="fa fa-star"></i>
                                </li>
                                <li class="rated">
                                    <i class="fa fa-star"></i>
                                </li>
                                <li class="rated">
                                    <i class="fa fa-star"></i>
                                </li>
                                <li class="rated">
                                    <i class="fa fa-star"></i>
                                </li>
                                <li>
                                    <i class="fa fa-star"></i>
                                </li>
                            </ul>
                            <h5 class="product-caption-title">Dooney & Bourke Claremont Dover</h5>
                            <div class="product-caption-price"><span class="product-caption-price-new">$110</span>
                            </div>
                            <ul class="product-caption-feature-list">
                                <li>3 left</li>
                                <li>Free Shipping</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <%= '</div><div class="row" data-gutter="15"> '.html_safe if index%3 == 2 && index+1 != count %>
                <% end %>
            </div>            
            <div class="row">
                <div class="col-md-6">
                    <p class="category-pagination-sign">58 sản phẩm thuộc chuyên mục Máy Vi Tính.</p>
                </div>
                <div class="col-md-6">
                    <nav>
                        <ul class="pagination category-pagination pull-right">
                            <li class="active"><%= link_to "1", "" %></li>
                            <li><%= link_to "2", "" %></li>
                            <li><%= link_to "3", "" %></li>
                            <li><%= link_to "4", "" %></li>
                            <li><%= link_to "5", "" %></li>
                            <li class="last"><%= link_to '<i class="fa fa-long-arrow-right"></i>'.html_safe, "" %></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="gap"></div>